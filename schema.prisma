// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./database.db"
}

model User {
  U_id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  email     String   @unique
  pseudo    String
  password  String
  Groups UsersInGroup[]

}

model Groups {
  G_id Int @id @default(autoincrement())
  name String @unique
  Users UsersInGroup[]
  Reminders Reminder[]
}

model Reminder {
  R_id Int @id @default(autoincrement())
  name String
  description String
  dueDate DateTime
  Users   Groups @relation(fields: [GroupId], references: [G_id])
  GroupId Int
}

model UsersInGroup {
  @@id(name: "idUser_Group", fields: [idUser, idGroup])
  ref_Groups  Groups @relation(fields: [idGroup], references: [G_id])
  ref_Users   User @relation(fields: [idUser], references: [U_id])
  idUser Int
  idGroup Int
}
